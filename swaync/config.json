{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 50,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 10,
  "control-center-margin-left": 10,
  "notification-margin-top": 50,
  "control-center-width": 450,
  "control-center-height": 600,
  "notification-window-width": 400,
  "layer": "overlay",
  "control-center-layer": "overlay",
  "timeout": 8,
  "timeout-low": 5,
  "timeout-critical": 0,
  "notification-icon-size": 64,
  "hide-on-action": true,
  "hide-on-clear": true,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "relative-timestamps": true,
  "widgets": [
    "title",
    "dnd",
    "notifications"
  ],
  "script-fail-notify": true,
  "scripts": {
    "handle-screenshot-edit": {
      "exec": "~/.config/swaync/scripts/handle_screenshot_click.sh",
      "run-on": "action",
      "app-name": "screenshot-tool",
      "action-name": "edit-screenshot:*"
    }
  },
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "notifications": {}
  },
  "notification-visibility": {
    "flameshot_cleanup": {
      "state": "ignored",
      "app-name": "flameshot"
    }
  }
}
